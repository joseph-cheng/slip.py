{% extends "header.html.j2" %}

{% block content %}
    <span id="statsIndexGrid">
      <span class="title">All Players</span>
      <table>
        {% for p in players if p[0] != "" %}
          <tr>
            <td class="conncode"><a href="/stats/{{ p[0]|replace('#', '_', 1) }}{{DEF_STATS}}">{{p[0]}}</a></td>
            <td>{{p[1]}} games</td>
          </tr>
        {% endfor%}
      </table>
    </span>
{% endblock %}
