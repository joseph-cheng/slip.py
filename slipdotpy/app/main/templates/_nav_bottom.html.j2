{% block nav_bottom %}
  <span class="navbar_bottom">
    <a href="https://github.com/pcrain/slip.py">{{ SITE_NAME }}</a> v{{ SITE_VERSION }} by Captain Pretzel
    &nbsp;
    <a href="{{ url_for('main.help') }}">(View Help)</a>
    &nbsp;
    <a href="{{ url_for('errors.error_log') }}">(View Error Logs)</a>
  </span>
  {% if UNIVERSAL_TOOLTIPS %}
    <script type="text/javascript">
      //JS magic for getting universal tooltips working
      var oldOnload = window.onload;
      window.onload = function () {
        if (typeof oldOnload == 'function') {
          oldOnload();
        }
        $("[title]").tooltips();
      }
    </script>
  {% endif %}
{% endblock %}
