{% extends "header.html.j2" %}

{% block content %}
    <span id="replayListingGrid">
        {% if form %}
          {% include '_search-bar.html.j2' %}
        {% endif %}
        <span id="replayListingInnerGrid">
            {% for replay in replays %}
                <span class="replayHoverWrapper">
                  {% include '_replay-mini.html.j2' %}
                </span>
            {% endfor %}
        </span>
        {% if prev_url %} <a style="grid-area: previous" href="{{ prev_url }}">Newer Replays</a> {% endif %}
        {% if next_url %} <a style="grid-area: next"     href="{{ next_url }}">Older Replays</a> {% endif %}
    </span>
{% endblock %}
